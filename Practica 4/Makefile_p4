# File:   Makefile_p4
# Author: PSCD-Unizar
# Date:   octubre 2022
# Coms:   Ejecutar "make -f Makefile_p4" para compilar
#         Ejecutar "make -f Makefile_p4 clean" para limpiar (borrar lo que genere)
#*****************************************************************

#---------------------------------------------------------
# macros
RM = /bin/rm -f  # para limpiar
CC = g++         # compilador
#---------------------------------------------------------

CP=./ControlParejas
#---------------------------------------------------------
# opciones compilación y enlazado ("linkado")
CPPFLAGS = -I. -O2 -std=c++11 -fmax-errors=1 # opciones compilación
LDFLAGS  = -pthread  # opciones de "linkado"
#---------------------------------------------------------
# vars
EJEC = practica_4

all: ${EJEC}
#---------------------------------------------------------
# "linkar"
${EJEC}: ${EJEC}.o ${CP}.o
	${CC} ${EJEC}.o ${CP}.o -o ${EJEC} ${CPPFLAGS} ${LDFLAGS}

#---------------------------------------------------------
# compilar
${EJEC}.o: ${EJEC}.cpp
	${CC} -c ${EJEC}.cpp -o ${EJEC}.o ${CPPFLAGS}

${CP}.o: ${CP}.hpp ${CP}.cpp
	${CC} -c ${CP}.cpp -o ${CP}.o ${CPPFLAGS}

#---------------------------------------------------------
# Cuidado con lo que se pone aquí, que se borra sin preguntar
clean:
	$(RM) ${CP}.o ${EJEC}.o ${EJEC}
